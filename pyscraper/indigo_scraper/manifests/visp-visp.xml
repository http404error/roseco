  <build_depend>libjpeg</build_depend>
  <build_depend>libpng12-dev</build_depend>
  <build_depend>ffmpeg</build_depend>
  <build_depend>bzip2</build_depend>
  <build_depend>libx11-dev</build_depend>
  <build_depend>libv4l-dev</build_depend>
  <build_depend>libusb-dev</build_depend>
  <build_depend>libfreenect-dev</build_depend>
  <build_depend>libois-dev</build_depend>

